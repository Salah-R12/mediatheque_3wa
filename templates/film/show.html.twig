{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ film.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ film.author }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ film.description }}</td>
            </tr>
            <tr>
                <th>Original_title</th>
                <td>{{ film.originalTitle }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ film.synopsis }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ film.duration }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ film.director }}</td>
            </tr>
            <tr>
                <th>Actors</th>
                <td>{{ film.actors }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('film_index') }}">back to list</a>

    <a href="{{ path('film_edit', {'id': film.id}) }}">edit</a>

    {{ include('film/_delete_form.html.twig') }}
{% endblock %}
