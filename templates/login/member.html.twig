{% extends "base.html.twig" %}

{% block title %}Connexion Adhèrent{% endblock %}

{% block body %}
<div style="max-width: 25em; margin: auto">
    <form method="POST" class="px-4 py-3">
        <div class="form-group">
            <input type="text" class="form-control" id="username" name="username" placeholder="Identifiant (nom d'utilisateur)">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe">
        </div>
        <button type="submit" class="btn btn-primary">Connexion</button>
    </form>
    <a class="dropdown-item" href="#">Mot de passe oublié ?</a>
</div>
{% endblock %}
