{% extends 'base.html.twig' %}

{% block title %}Littérature : {{ book.name }}{% endblock %}

{% block body %}
    <h1>Littérature</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ book.name }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>Édition</th>
                <td>{{ book.edition }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ book.pageNb }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('book_index') }}">retour à la liste</a>
	|
    <a href="{{ path('book_edit', {'id': book.id}) }}">modifier</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
