{% extends 'base.html.twig' %}

{% set mainTitle = 'Literrature: %s'|trans|replace({'%s': book.name}) %}

{% block title %}{{ mainTitle }}{% endblock %}

{% block body %}
    <h1>{{ mainTitle }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ book.name }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>Édition</th>
                <td>{{ book.edition }}</td>
            </tr>
            <tr>
                <th>Nombre de pages</th>
                <td>{{ book.pageNb }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('book_edit', {'id': book.id}) }}">{{ 'Update'|trans }}</a>

    {{ include('book/_delete_form.html.twig') }}
    {% else %}
 	<p>
 		Pour emprunter le support physique de ce média (livre papier, DVD film ou CD de musique), veuillez directement vous présenter à la médiathèque.<br>
		TODO: Dans le cas d'un ROLE_USER, on peut éventuellement rajouter un bouton "Emprunter " et/ou "Accéder au stream"
	</p>
	
    {% endif %}
    
    <a href="{{ path('book_index') }}">{{ 'back to list'|trans }}</a>
    
{% endblock %}
