{% extends 'base.html.twig' %}

{% block title %}Liste des ouvrages littéraires{% endblock %}

{% block body %}
    <h1>Liste des ouvrages littéraires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Édition</th>
                <th>Pages</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.name }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.edition }}</td>
                <td>{{ book.pageNb }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">voir</a>
                    |
                    <a href="{{ path('book_edit', {'id': book.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Enregistrer un nouveau livre</a>
{% endblock %}
