<form method="post" action="{{ path('staff_delete', {'id': staff.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this staff member?'|trans }}Êtes-vous sûr(e) de vouloir définitivement supprimer ce collaborateur ? \nCette action est irréversible !');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ staff.id) }}">
    <button class="btn">{{ 'Delete'|trans }}</button>
</form>
