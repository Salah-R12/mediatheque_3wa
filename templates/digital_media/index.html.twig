{% extends 'base.html.twig' %}

{% block title %}DigitalMedia index{% endblock %}

{% block body %}
    <h1>DigitalMedia index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Path</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for digital_media in digital_media %}
            <tr>
                <td>{{ digital_media.id }}</td>
                <td>{{ digital_media.url }}</td>
                <td>{{ digital_media.path }}</td>
                <td>
                    <a href="{{ path('digital_media_show', {'id': digital_media.id}) }}">show</a>
                    <a href="{{ path('digital_media_edit', {'id': digital_media.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('digital_media_new') }}">Create new</a>
{% endblock %}
