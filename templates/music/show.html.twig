{% extends 'base.html.twig' %}

{% block title %}Music{% endblock %}

{% block body %}
    <h1>Music</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ music.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ music.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ music.author }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ music.description }}</td>
            </tr>
            <tr>
                <th>Singer</th>
                <td>{{ music.singer }}</td>
            </tr>
            <tr>
                <th>Band</th>
                <td>{{ music.band }}</td>
            </tr>
            <tr>
                <th>Titles</th>
                <td>{{ music.titles }}</td>
            </tr>
            <tr>
                <th>Album</th>
                <td>{{ music.album }}</td>
            </tr>
            <tr>
                <th>Compositor</th>
                <td>{{ music.compositor }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('music_index') }}">back to list</a>

    <a href="{{ path('music_edit', {'id': music.id}) }}">edit</a>

    {{ include('music/_delete_form.html.twig') }}
