<form method="post" action="{{ path('member_delete', {'id': member.id}) }}" onsubmit="return confirm('Êtes-vous sûr(e) de vouloir supprimer cet adhérent ? \nCette action est irréversible !');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ member.id) }}">
    <button class="btn">Supprimer définitivement</button>
</form>
