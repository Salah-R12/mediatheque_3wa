<form method="post" action="{{ path('member_delete', {'id': member.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this member?'|trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ member.id) }}">
    <button class="btn">{{ 'Delete'|trans }}</button>
</form>
