{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Adhérent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ member.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ member.lastName }}</td>
            </tr>
            <tr>
                <th>Identifiant</th>
                <td>{{ member.username }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ member.email }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ member.address1 }}</td>
            </tr>
            <tr>
                <th>Complément d'adresse</th>
                <td>{{ member.address2 }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ member.zipcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ member.city }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ member.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('member_index') }}">Retour à la liste</a>
	|
    <a href="{{ path('member_edit', {'id': member.id}) }}">Modifier</a>
	<br><br>
    {{ include('member/_delete_form.html.twig') }}
{% endblock %}
