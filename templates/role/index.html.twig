{% extends 'base.html.twig' %}

{% block title %}{{ 'Role index'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Role index'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.name }}</td>
                <td>
                    <a href="{{ path('role_show', {'id': role.id}) }}">{{ 'show'|trans }}</a>
                    <a href="{{ path('role_edit', {'id': role.id}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'no records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('role_new') }}">{{ 'register new role'|trans }}</a>
{% endblock %}
